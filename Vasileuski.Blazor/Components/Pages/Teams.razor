@page "/teams"
@rendermode InteractiveServer
@using Vasileuski.Blazor.Models
@using Vasileuski.Blazor.Services

<PageTitle>Спортивные команды</PageTitle>

<div class="container mt-4">
    <div class="row">
        <div class="col-12 mb-4">
            <div class="card bg-light">
                <div class="card-body">
                    <h1 class="card-title">🏆 Управление спортивными командами</h1>
                    <p class="card-text">Просмотр и детализация информации о спортивных командах различных категорий.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <CascadingValue Value="TeamService">
                <TeamList TeamSelected="ShowDetails" />
                <Pager />
            </CascadingValue>
        </div>
        <div class="col-md-4">
            <TeamDetails Team="SelectedTeam" />
        </div>
    </div>
</div>

@code {
    [Inject]
    private ITeamService TeamService { get; set; } = default!;

    private TeamDTO? SelectedTeam { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await TeamService.GetTeams();
    }

    private void ShowDetails(int id)
    {
        SelectedTeam = TeamService.Teams.FirstOrDefault(t => t.Id == id);
    }
}