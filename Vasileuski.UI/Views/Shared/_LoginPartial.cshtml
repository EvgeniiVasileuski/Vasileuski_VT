@using Microsoft.AspNetCore.Identity
@using Vasileuski.UI.Data  <!-- Добавьте эту строку -->
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);
        var displayName = user?.GetDisplayName() ?? User.Identity?.Name;
        var initials = user?.GetInitials() ?? "U";

        <li class="nav-item">
            <div class="dropdown">
                <a class="nav-link dropdown-toggle text-dark" href="#" id="userDropdown" role="button"
                   data-bs-toggle="dropdown" aria-expanded="false">
                    @if (user?.Avatar != null)
                    {
                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(user.Avatar)"
                             alt="@displayName"
                             class="rounded-circle me-2"
                             style="width: 30px; height: 30px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center me-2"
                             style="width: 30px; height: 30px; font-size: 12px; font-weight: bold;">
                            @initials
                        </div>
                    }
                    <span class="d-none d-md-inline">@displayName</span>
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                    <li>
                        <div class="dropdown-item-text px-3">
                            <div class="d-flex align-items-center">
                                @if (user?.Avatar != null)
                                {
                                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(user.Avatar)"
                                         alt="@displayName"
                                         class="rounded-circle me-2"
                                         style="width: 50px; height: 50px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-2"
                                         style="width: 50px; height: 50px; font-size: 18px; font-weight: bold;">
                                        @initials
                                    </div>
                                }
                                <div>
                                    <strong>@displayName</strong>
                                    @if (!string.IsNullOrEmpty(user?.Email))
                                    {
                                        <div class="text-muted small">@user.Email</div>
                                    }
                                    @if (user?.Points > 0)
                                    {
                                        <div class="text-muted small">
                                            <i class="fas fa-star text-warning"></i>
                                            @user.Points очков • Уровень @user.Level
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">
                            <i class="fas fa-user-cog"></i> Профиль
                        </a>
                    </li>
                    @if (user?.IsVerified == true)
                    {
                        <li>
                            <span class="dropdown-item text-success">
                                <i class="fas fa-check-circle"></i> Подтверждён
                            </span>
                        </li>
                    }
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
                              asp-route-returnUrl="@Url.Action("Index", "Team", new { area = "" })">
                            <button type="submit" class="dropdown-item">
                                <i class="fas fa-sign-out-alt"></i> Выйти
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">
                <i class="fas fa-user-plus"></i> Регистрация
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">
                <i class="fas fa-sign-in-alt"></i> Вход
            </a>
        </li>
    }
</ul>