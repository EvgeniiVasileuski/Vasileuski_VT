@model Team
@{
    var isFavorite = ViewBag.IsFavorite as bool? ?? false;
}

<div class="card h-100 shadow-sm team-card">
    <!-- Логотип команды -->
    <div class="card-img-container" style="height: 200px; overflow: hidden; background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);">
        @if (!string.IsNullOrEmpty(Model.Image))
        {
            <img src="@Url.Content(Model.Image)"
                 class="card-img-top h-100 w-100"
                 alt="@Model.Name"
                 style="object-fit: contain; padding: 15px;" />
        }
        else
        {
            <div class="h-100 w-100 d-flex align-items-center justify-content-center">
                <i class="fas fa-users fa-3x text-muted"></i>
            </div>
        }
    </div>

    <div class="card-body d-flex flex-column">
        <!-- Название команды -->
        <h5 class="card-title">@Model.Name</h5>

        <!-- Категория -->
        @if (Model.Category != null)
        {
            <span class="badge bg-primary mb-2 align-self-start">@Model.Category.Name</span>
        }

        <!-- Местоположение -->
        @if (!string.IsNullOrEmpty(Model.Location))
        {
            <div class="mb-2">
                <small class="text-muted">
                    <i class="fas fa-map-marker-alt"></i> @Model.Location
                </small>
            </div>
        }

        <!-- Описание команды -->
        <p class="card-text flex-grow-1 text-muted small">
            @if (!string.IsNullOrEmpty(Model.Description))
            {
                @(Model.Description.Length > 120 ? Model.Description.Substring(0, 120) + "..." : Model.Description)
            }
            else
            {
                <span class="fst-italic">Описание отсутствует</span>
            }
        </p>

        <!-- Основная статистика команды -->
        <div class="team-main-stats mb-3">
            <div class="d-flex justify-content-around text-center">
                <div class="stat-item">
                    <div class="stat-label text-muted">Очки</div>
                    <div class="stat-value fw-bold text-primary display-6">@Model.Points</div>
                </div>

                <div class="stat-item">
                    <div class="stat-label text-muted">Позиция</div>
                    <div class="stat-value fw-bold text-success display-6">#@Model.Position</div>
                </div>
            </div>
        </div>

        <!-- Детальная статистика -->
        <div class="team-detail-stats mb-3">
            <div class="row g-1 text-center">
                <div class="col-4">
                    <div class="p-2 bg-light rounded">
                        <div class="fw-bold text-success">@Model.Wins</div>
                        <small class="text-muted">Победы</small>
                    </div>
                </div>
                <div class="col-4">
                    <div class="p-2 bg-light rounded">
                        <div class="fw-bold text-warning">@Model.Draws</div>
                        <small class="text-muted">Ничьи</small>
                    </div>
                </div>
                <div class="col-4">
                    <div class="p-2 bg-light rounded">
                        <div class="fw-bold text-danger">@Model.Losses</div>
                        <small class="text-muted">Поражения</small>
                    </div>
                </div>
            </div>

            <!-- Разница голов -->
            <div class="mt-2 text-center">
                <small class="text-muted">Голы:</small>
                <span class="fw-bold text-success">@Model.GoalsFor</span>
                <span class="mx-1">-</span>
                <span class="fw-bold text-danger">@Model.GoalsAgainst</span>
                <span class="ms-2">
                    (<span class="@(Model.GoalDifference >= 0 ? "text-success" : "text-danger") fw-bold">
                        @(Model.GoalDifference >= 0 ? "+" : "")@Model.GoalDifference
                    </span>)
                </span>
            </div>
        </div>

        <!-- Информация о тренере и капитане -->
        @if (!string.IsNullOrEmpty(Model.HeadCoach) || !string.IsNullOrEmpty(Model.Captain))
        {
            <div class="team-info mb-3">
                @if (!string.IsNullOrEmpty(Model.HeadCoach))
                {
                    <div>
                        <small class="text-muted">Тренер:</small>
                        <span class="ms-1 fw-semibold">@Model.HeadCoach</span>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.Captain))
                {
                    <div>
                        <small class="text-muted">Капитан:</small>
                        <span class="ms-1 fw-semibold">@Model.Captain</span>
                    </div>
                }
            </div>
        }

        <!-- Кнопки действий -->
        <div class="mt-auto">
            <!-- Кнопка добавления в избранное -->
            <form asp-controller="Favorites" asp-action="AddToFavorites" method="post" class="d-inline w-100">
                @Html.AntiForgeryToken()
                <input type="hidden" name="teamId" value="@Model.Id" />
                <button type="submit" class="btn btn-outline-warning w-100 mb-2">
                    <i class="fas fa-star"></i> В избранное
                </button>
            </form>

            <!-- Кнопка детальной информации -->
            <a asp-action="Details" asp-route-id="@Model.Id"
               class="btn btn-primary w-100">
                <i class="fas fa-chart-line"></i> Статистика
            </a>
        </div>
    </div>

    <div class="card-footer bg-transparent">
        <div class="d-flex justify-content-between align-items-center">
            <small class="text-muted">
                <i class="fas fa-hashtag"></i> @Model.Id
            </small>

            @if (Model.FoundedYear.HasValue)
            {
                <small class="text-muted">
                    <i class="fas fa-calendar-alt"></i> @Model.FoundedYear
                </small>
            }

            @if (!string.IsNullOrEmpty(Model.Colors))
            {
                <div class="team-colors">
                    @foreach (var color in Model.Colors.Split(',').Take(2))
                    {
                        <span class="color-dot" style="background-color: @color.Trim()"></span>
                    }
                </div>
            }
        </div>
    </div>
</div>

<style>
    .team-colors {
        display: flex;
        gap: 4px;
    }

    .color-dot {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        display: inline-block;
        border: 1px solid #ddd;
    }

    .team-main-stats .stat-value {
        font-size: 2rem;
        line-height: 1;
    }

    .team-detail-stats .bg-light {
        background-color: #f8f9fa !important;
    }
</style>