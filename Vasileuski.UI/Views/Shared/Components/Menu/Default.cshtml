@{
    var controller = ViewData["Controller"]?.ToString()?.ToLower() ?? string.Empty;
    var area = ViewData["Area"]?.ToString()?.ToLower() ?? string.Empty;
}

<ul class="navbar-nav flex-grow-1">
    <li class="nav-item">
        <a class="nav-link text-dark @(controller == "home" && area == "" ? "active" : "")"
           asp-area=""
           asp-controller="Home"
           asp-action="Index">
            Лб 1
        </a>
    </li>

    <!-- ДОБАВЬТЕ ЭТУ ССЫЛКУ: -->
    <li class="nav-item">
        <a class="nav-link text-dark @(controller == "team" ? "active" : "")"
           asp-area=""
           asp-controller="Team"
           asp-action="Index">
            Спортивные команды
        </a>
    </li>

    <li class="nav-item">
        <a class="nav-link text-dark @(controller == "product" ? "active" : "")"
           asp-area=""
           asp-controller="Product"
           asp-action="Index">
            Каталог
        </a>
    </li>

    <li class="nav-item">
        <a class="nav-link text-dark @(area == "admin" ? "active" : "")"
           asp-area="Admin"
           asp-page="/Index">
            Администрирование
        </a>
    </li>
</ul>