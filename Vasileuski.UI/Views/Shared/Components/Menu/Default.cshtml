@{
    // Получаем данные, переданные из компонента
    var controller = ViewData["Controller"]?.ToString()?.ToLower() ?? string.Empty;
    var area = ViewData["Area"]?.ToString()?.ToLower() ?? string.Empty;

    // Дополнительно можно получить имя действия
    var action = ViewContext.RouteData.Values["action"]?.ToString()?.ToLower() ?? string.Empty;

    // Для отладки (можно удалить)
    @* <div style="display: none;">
        Controller: @controller, Area: @area, Action: @action
    </div> *@
}

<ul class="navbar-nav flex-grow-1">
    <!-- Пункт меню: Лб 1 -->
    <li class="nav-item">
        <a class="nav-link  @(controller == "home" && area == "" ? "active" : "")"
           asp-area=""
           asp-controller="Home"
           asp-action="Index">
            Лб 1
        </a>
    </li>

    <!-- Пункт меню: Каталог -->
    <li class="nav-item">
        <a class="nav-link  @(controller == "product" ? "active" : "")"
           asp-area=""
           asp-controller="Product"
           asp-action="Index">
            Каталог
        </a>
    </li>

    <!-- Пункт меню: Администрирование -->
    <li class="nav-item">
        <a class="nav-link  @(area == "admin" ? "active" : "")"
           asp-area="Admin"
           asp-page="/Index">
            Администрирование
        </a>
    </li>

    <!-- Пример дополнительных пунктов меню (если нужно) -->
    @*
    <li class="nav-item">
        <a class="nav-link text-dark @(controller == "cart" ? "active" : "")" 
           asp-area="" 
           asp-controller="Cart" 
           asp-action="Index">
           Корзина
        </a>
    </li>
    *@
</ul>
