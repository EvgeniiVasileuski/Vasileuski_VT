@{
    var controller = ViewData["Controller"]?.ToString()?.ToLower() ?? string.Empty;
    var area = ViewData["Area"]?.ToString()?.ToLower() ?? string.Empty;
    var page = ViewData["Page"]?.ToString()?.ToLower() ?? string.Empty;
    var action = ViewData["Action"]?.ToString()?.ToLower() ?? string.Empty;
}

<ul class="navbar-nav flex-grow-1">
    <!-- Главная страница -->
    <li class="nav-item">
        <a class="nav-link text-dark @(controller == "home" && area == "" ? "active" : "")"
           asp-area=""
           asp-controller="Home"
           asp-action="Index">
            <i class="fas fa-home"></i> Лаб 1
        </a>
    </li>

    <!-- Спортивные команды -->
    <li class="nav-item">
        <a class="nav-link text-dark @(controller == "team" && area == "" ? "active" : "")"
           asp-area=""
           asp-controller="Team"
           asp-action="Index">
            <i class="fas fa-users"></i> Спортивные команды
        </a>
    </li>

    <!-- Избранное -->
    <li class="nav-item">
        <a class="nav-link text-dark @(controller == "favorites" && area == "" ? "active" : "")"
           asp-area=""
           asp-controller="Favorites"
           asp-action="Index">
            <i class="fas fa-star"></i> Избранное
        </a>
    </li>

    <!-- Статистика -->
    <li class="nav-item">
        <a class="nav-link text-dark @(controller == "team" && action == "statistics" && area == "" ? "active" : "")"
           asp-area=""
           asp-controller="Team"
           asp-action="Statistics">
            <i class="fas fa-chart-bar"></i> Статистика
        </a>
    </li>

    <!-- Административная панель -->
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle text-dark @(area == "admin" ? "active" : "")"
           href="#"
           id="adminDropdown"
           role="button"
           data-bs-toggle="dropdown"
           aria-expanded="false">
            <i class="fas fa-cogs"></i> Администрирование
        </a>
        <ul class="dropdown-menu" aria-labelledby="adminDropdown">
            <!-- Главная страница админки -->
            <li>
                <a class="dropdown-item @(area == "admin" && string.IsNullOrEmpty(page) ? "active" : "")"
                   asp-area="Admin"
                   asp-page="/Index">
                    <i class="fas fa-tachometer-alt"></i> Панель управления
                </a>
            </li>
            <li><hr class="dropdown-divider"></li>

            <!-- Управление командами -->
            <li>
                <a class="dropdown-item @(area == "admin" && (page?.Contains("teams") == true || page == "teams/index") ? "active" : "")"
                   asp-area="Admin"
                   asp-page="/Teams/Index">
                    <i class="fas fa-users"></i> Команды
                </a>
            </li>

            <!-- Управление категориями -->
            <li>
                <a class="dropdown-item @(area == "admin" && (page?.Contains("categories") == true || page == "categories/index") ? "active" : "")"
                   asp-area="Admin"
                   asp-page="/Categories/Index">
                    <i class="fas fa-tags"></i> Категории
                </a>
            </li>
        </ul>
    </li>
</ul>