@using Microsoft.AspNetCore.Http
@using Vasileuski.UI.Extensions
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

@model IEnumerable<Team>

@{
    ViewData["Title"] = "Спортивные команды";
    var categories = ViewBag.Categories as IEnumerable<Category>;
    var currentCategoryNormalized = ViewBag.CurrentCategory as string;
    var currentCategoryName = ViewBag.CurrentCategoryName as string;
    var favoritesCount = Context.Session.Get<List<int>>("Favorites")?.Count ?? 0;
}

<div class="container mt-4">
    <!-- Заголовок и информация -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-1">Спортивные команды</h1>
            @if (!string.IsNullOrEmpty(currentCategoryName))
            {
                <p class="text-muted mb-0">Категория: <strong>@currentCategoryName</strong></p>
            }
        </div>

        <!-- Кнопки действий -->
        <div class="d-flex gap-2">
            <a asp-controller="Favorites" asp-action="Index"
               class="btn btn-warning position-relative">
                <i class="fas fa-star"></i> Избранное
                @if (favoritesCount > 0)
                {
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                        @favoritesCount
                    </span>
                }
            </a>

            <a asp-action="Statistics" class="btn btn-outline-primary">
                <i class="fas fa-chart-bar"></i> Общая статистика
            </a>
        </div>
    </div>

    <!-- Фильтры и поиск -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row g-3">
                <!-- Фильтр по категориям -->
                <div class="col-md-12">
                    <h6 class="mb-2">Фильтр по категориям</h6>
                    <div class="btn-group flex-wrap" role="group">
                        <a asp-action="Index"
                           asp-route-category=""
                           class="btn @(string.IsNullOrEmpty(currentCategoryNormalized) ? "btn-primary" : "btn-outline-primary") mb-2">
                            <i class="fas fa-globe"></i> Все команды
                        </a>

                        @if (categories != null && categories.Any())
                        {
                            foreach (var category in categories)
                            {
                                <a asp-action="Index"
                                   asp-route-category="@category.NormalizedName"
                                   class="btn @(currentCategoryNormalized == category.NormalizedName ? "btn-primary" : "btn-outline-primary") mb-2 mx-1">
                                    @if (!string.IsNullOrEmpty(category.Image))
                                    {
                                        <img src="/@category.Image" alt="@category.Name" style="width: 20px; height: 20px; margin-right: 5px;" />
                                    }
                                    @category.Name
                                </a>
                            }
                        }
                    </div>
                </div>

                <!-- Статистика -->
                @if (Model.Any())
                {
                    <div class="col-md-12 mt-3">
                        <h6 class="mb-2">Общая статистика</h6>
                        <div class="d-flex flex-wrap gap-3">
                            <div class="text-center">
                                <div class="fw-bold text-primary">@Model.Sum(t => t.Points)</div>
                                <small class="text-muted">Всего очков</small>
                            </div>
                            <div class="text-center">
                                <div class="fw-bold text-success">@Model.Sum(t => t.Wins)</div>
                                <small class="text-muted">Всего побед</small>
                            </div>
                            <div class="text-center">
                                <div class="fw-bold text-info">
                                    @if (Model.Any())
                                    {
                                        @Model.Average(t => t.Points).ToString("F1")
                                    }
                                    else
                                    {
                                        <text>0</text>
                                    }
                                </div>
                                <small class="text-muted">Среднее очков</small>
                            </div>
                            <div class="text-center">
                                <div class="fw-bold text-warning">@Model.Count()</div>
                                <small class="text-muted">Команд</small>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Список команд -->
    @if (Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var team in Model.OrderBy(t => t.Position))
            {
                <div class="col">
                    @await Component.InvokeAsync("TeamCard", new { team = team })
                </div>
            }
        </div>

        <!-- Сводная информация -->
        <div class="mt-4 pt-3 border-top">
            <div class="row">
                <div class="col-md-4">
                    <div class="card border-0 bg-light">
                        <div class="card-body text-center">
                            <h5 class="text-success">
                                <i class="fas fa-crown"></i> Лидер
                            </h5>
                            @{
                                var leader = Model.OrderBy(t => t.Position).First();
                            }
                            <h4>@leader.Name</h4>
                            <small class="text-muted">@leader.Points очков</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-0 bg-light">
                        <div class="card-body text-center">
                            <h5 class="text-primary">
                                <i class="fas fa-futbol"></i> Лучшая атака
                            </h5>
                            @{
                                var bestAttack = Model.OrderByDescending(t => t.GoalsFor).First();
                            }
                            <h4>@bestAttack.Name</h4>
                            <small class="text-muted">@bestAttack.GoalsFor голов</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-0 bg-light">
                        <div class="card-body text-center">
                            <h5 class="text-info">
                                <i class="fas fa-shield-alt"></i> Лучшая защита
                            </h5>
                            @{
                                var bestDefense = Model.OrderBy(t => t.GoalsAgainst).First();
                            }
                            <h4>@bestDefense.Name</h4>
                            <small class="text-muted">@bestDefense.GoalsAgainst пропущено</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="fas fa-users fa-4x text-muted"></i>
            </div>
            <h3 class="text-muted">Команды не найдены</h3>
            <p class="text-muted mb-4">В выбранной категории пока нет спортивных команд.</p>
            <a asp-action="Index" asp-route-category="" class="btn btn-primary">
                <i class="fas fa-arrow-left"></i> Вернуться ко всем командам
            </a>
        </div>
    }
</div>