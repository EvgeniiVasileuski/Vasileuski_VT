@using Microsoft.AspNetCore.Http
@using Vasileuski.UI.Extensions
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

@model IEnumerable<Team>

@{
    ViewData["Title"] = "Спортивные команды";
    var favoritesCount = Context.Session.Get<List<int>>("Favorites")?.Count ?? 0;
}

<div class="container mt-4">
    <!-- Заголовок и информация -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-1">Спортивные команды</h1>
            <p class="text-muted mb-0">
                <i class="fas fa-trophy"></i> Всего команд: <strong>@Model.Count()</strong>
                @if (ViewBag.CurrentCategory != null)
                {
                    <span> • Категория: <strong>@ViewBag.CurrentCategory</strong></span>
                }
            </p>
        </div>

        <!-- Кнопки действий -->
        <div class="d-flex gap-2">
            <a asp-controller="Favorites" asp-action="Index"
               class="btn btn-warning position-relative">
                <i class="fas fa-star"></i> Избранное
                @if (favoritesCount > 0)
                {
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                        @favoritesCount
                    </span>
                }
            </a>

            <a asp-action="Statistics" class="btn btn-outline-primary">
                <i class="fas fa-chart-bar"></i> Общая статистика
            </a>
        </div>
    </div>

    <!-- Фильтры и поиск -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row g-3">
                <!-- Фильтр по категориям -->
                @if (ViewBag.Categories != null)
                {
                    <div class="col-md-6">
                        <h6 class="mb-2">Фильтр по категориям</h6>
                        <div class="btn-group flex-wrap" role="group">
                            @{
                                var categories = ViewBag.Categories as IEnumerable<Category>;
                                var currentCategory = ViewBag.CurrentCategoryNormalizedName as string;
                            }

                            <a asp-action="Index"
                               asp-route-category=""
                               class="btn @(string.IsNullOrEmpty(currentCategory) ? "btn-primary" : "btn-outline-primary") mb-1">
                                Все команды
                            </a>

                            @foreach (var cat in categories)
                            {
                                <a asp-action="Index"
                                   asp-route-category="@cat.NormalizedName"
                                   class="btn @(currentCategory == cat.NormalizedName ? "btn-primary" : "btn-outline-primary") mb-1 mx-1">
                                    @cat.Name
                                </a>
                            }
                        </div>
                    </div>
                }

                <!-- Статистика -->
                <div class="col-md-6">
                    <h6 class="mb-2">Общая статистика</h6>
                    <div class="d-flex flex-wrap gap-3">
                        <div class="text-center">
                            <div class="fw-bold text-primary">@Model.Sum(t => t.Points)</div>
                            <small class="text-muted">Всего очков</small>
                        </div>
                        <div class="text-center">
                            <div class="fw-bold text-success">@Model.Sum(t => t.Wins)</div>
                            <small class="text-muted">Всего побед</small>
                        </div>
                        <div class="text-center">
                            <div class="fw-bold text-info">
                                @(Model.Any() ? Model.Average(t => t.Position).ToString("F1") : "0.0")
                            </div>
                            <small class="text-muted">Средняя позиция</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Список команд -->
    @if (Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var team in Model.OrderBy(t => t.Position))
            {
                <div class="col">
                    @await Component.InvokeAsync("TeamCard", new { team = team })
                </div>
            }
        </div>

        <!-- Сводная информация -->
        @if (Model.Any())
        {
            <div class="mt-4 pt-3 border-top">
                <div class="row">
                    <div class="col-md-4">
                        <div class="card border-0 bg-light">
                            <div class="card-body text-center">
                                <h5 class="text-success">
                                    <i class="fas fa-crown"></i> Лидер
                                </h5>
                                <h4>@Model.OrderBy(t => t.Position).First().Name</h4>
                                <small class="text-muted">@Model.OrderBy(t => t.Position).First().Points очков</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border-0 bg-light">
                            <div class="card-body text-center">
                                <h5 class="text-primary">
                                    <i class="fas fa-futbol"></i> Лучшая атака
                                </h5>
                                <h4>@Model.OrderByDescending(t => t.GoalsFor).First().Name</h4>
                                <small class="text-muted">@Model.OrderByDescending(t => t.GoalsFor).First().GoalsFor голов</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border-0 bg-light">
                            <div class="card-body text-center">
                                <h5 class="text-info">
                                    <i class="fas fa-shield-alt"></i> Лучшая защита
                                </h5>
                                <h4>@Model.OrderBy(t => t.GoalsAgainst).First().Name</h4>
                                <small class="text-muted">@Model.OrderBy(t => t.GoalsAgainst).First().GoalsAgainst пропущено</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="fas fa-users fa-4x text-muted"></i>
            </div>
            <h3 class="text-muted">Команды не найдены</h3>
            <p class="text-muted mb-4">В выбранной категории пока нет спортивных команд.</p>
            <a asp-action="Index" asp-route-category="" class="btn btn-primary">
                <i class="fas fa-arrow-left"></i> Вернуться ко всем командам
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        function addToFavorites(teamId, teamName) {
            fetch('/Favorites/AddToFavorites', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                },
                body: JSON.stringify({ teamId: teamId })
            })
            .then(response => {
                if (response.ok) {
                    showToast(`Команда "${teamName}" добавлена в избранное!`, 'success');
                    updateFavoritesCount();
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showToast('Произошла ошибка при добавлении в избранное', 'error');
            });
        }

        function showToast(message, type) {
            // Реализация toast уведомлений
            alert(message); // Временное решение
        }

        function updateFavoritesCount() {
            // Обновление счетчика избранного
            location.reload();
        }
    </script>
}