    <script>
        // Проверка загрузки Font Awesome
        document.addEventListener('DOMContentLoaded', function() {
            console.log('DOM загружен');

            // Проверяем, загрузился ли Font Awesome
            const faStyles = Array.from(document.styleSheets).find(sheet =>
                sheet.href && sheet.href.includes('font-awesome')
            );

            if (faStyles) {
                console.log('✅ Font Awesome CSS загружен:', faStyles.href);

                // Проверяем наличие шрифтов
                const testIcon = document.createElement('i');
                testIcon.className = 'fas fa-test';
                document.body.appendChild(testIcon);

                const computedStyle = window.getComputedStyle(testIcon);
                const fontFamily = computedStyle.fontFamily;

                if (fontFamily.includes('Font Awesome')) {
                    console.log('✅ Шрифты Font Awesome загружены');
                } else {
                    console.log('❌ Шрифты Font Awesome НЕ загружены');
                    console.log('Текущий шрифт:', fontFamily);
                }

                document.body.removeChild(testIcon);
            } else {
                console.log('❌ Font Awesome CSS НЕ загружен');

                // Показываем альтернативный текст
                document.querySelectorAll('.fa-brands, .fab').forEach(icon => {
                    const parent = icon.parentElement;
                    const altText = document.createElement('span');
                    altText.className = 'badge bg-secondary';

                    if (icon.classList.contains('fa-facebook-f')) {
                        altText.textContent = 'FB';
                        altText.style.backgroundColor = '#1877F2';
                    } else if (icon.classList.contains('fa-vk')) {
                        altText.textContent = 'VK';
                        altText.style.backgroundColor = '#0077FF';
                    } else if (icon.classList.contains('fa-twitter')) {
                        altText.textContent = 'TW';
                        altText.style.backgroundColor = '#1DA1F2';
                    }

                    parent.replaceChild(altText, icon);
                });
            }
        });
    </script>
