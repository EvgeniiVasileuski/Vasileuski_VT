@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Главная страница - Hello World!</title>

    <!-- Подключение CSS файлов -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        /* Дополнительные стили для этой страницы */
        .hello-world {
            color: #007bff;
            font-size: 2.5rem;
            margin-top: 2rem;
        }

        .icon-demo {
            font-size: 2rem;
            margin: 1rem;
        }
    </style>
</head>
<body>
    
    <main class="container">
        
            <div class="container mt-4">
                <!-- Заголовок страницы -->
                <header class="mb-4">
                    
                    <h1>Лабораторная работа №2</h1>
                </header>

                <div class="row">
                    <div class="col-md-6">
                        <!-- Список с заглавными буквами -->
                        <section class="mb-5">
                            <h2 class="mb-3">Список</h2>
                            <ol class="list-upper-alpha">
                                <li>элемент 0 списка</li>
                                <li>элемент 1 списка</li>
                                <li>элемент 2 списка</li>
                                <li>элемент 3 списка</li>
                                <li>элемент 4 списка</li>
                            </ol>
                        </section>
                    </div>

                    <div class="col-md-6">
                        <!-- Форма -->
                    <section>
                        <h3 class="mb-3">Форма</h3>
                        <!-- Форма с методом POST, action указывает на текущую страницу (можно оставить #) -->
                        <form method="post" action="https://jsonplaceholder.typicode.com/posts" class="needs-validation" novalidate>
                            <div class="mb-4">
                                <div class="row mb-3">
                                    
                                    <div class="col-sm-9">
                                        <select class="form-select" id="item1" name="item1">
                                            <option selected value="item1">Item 1</option>
                                            <option value="item2">Item 2</option>
                                            <option value="item3">Item 3</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="checkbox" name="chk1" id="chk1" value="on">
                                    <label class="form-check-label" for="chk1">Чек-бокс 1</label>
                                </div>
                                <div class="form-check mb-3">
                                    <input class="form-check-input" type="checkbox" name="chk2" id="chk2" value="on">
                                    <label class="form-check-label" for="chk2">Чек-бокс 2</label>
                                </div>

                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="radio" name="radio" id="radio1" value="1">
                                    <label class="form-check-label" for="radio1">Радио-1</label>
                                </div>
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="radio" name="radio" id="radio2" value="2" checked>
                                    <label class="form-check-label" for="radio2">Радио-2</label>
                                </div>
                                <div class="form-check mb-4">
                                    <input class="form-check-input" type="radio" name="radio" id="radio3" value="3">
                                    <label class="form-check-label" for="radio3">Радио-3</label>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <label for="login" class="col-form-label">Логин:</label>
                                    </div>
                                    <div class="col-sm-9">
                                        <input type="email" class="form-control" id="login" name="login" value="user1@mail.ru" required>
                                    </div>
                                </div>

                                <div class="row mb-4">
                                    <div class="col-sm-3">
                                        <label for="pass" class="col-form-label">Пароль:</label>
                                    </div>
                                    <div class="col-sm-9">
                                        <input type="password" class="form-control" id="pass" name="pass" placeholder="......" required>
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-primary">Отправить</button>
                            </div>
                        </form>
                    </section>
                    </div>
                </div>
            </div>

            <!-- Стили для нумерации списка заглавными буквами -->
            <style>
                .list-upper-alpha {
                    list-style-type: upper-alpha;
                    padding-left: 1.5rem;
                }

                    .list-upper-alpha li {
                        margin-bottom: 0.5rem;
                        font-size: 1.1rem;
                    }

                body {
                    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                    background-color: #f8f9fa;
                }

                h1 {
                    color: #dee2e6;
                    font-size: 1.8rem;
                    border-bottom: 1px solid #dee2e6;
                    padding-bottom: 10px;
                }

                h2 {
                    color: #495057;
                    font-size: 1.5rem;
                    margin-top: 15px;
                }

                h3 {
                    color: #6c757d;
                    font-size: 1.3rem;
                    padding-bottom: 8px;
                    border-bottom: 2px solid #e9ecef;
                }

                h5 {
                    color: #495057;
                    margin-bottom: 15px;
                }

                /* .container {
                    background-color: white;
                    padding: 30px;
                    border-radius: 10px;
                    box-shadow: 0 0 15px rgba(0, 0, 0, 0.05);
                } */

               

                }
            </style>

            <!-- Подключение Bootstrap JS (необязательно, но полезно для некоторых компонентов) -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
        
    </main>
    
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 