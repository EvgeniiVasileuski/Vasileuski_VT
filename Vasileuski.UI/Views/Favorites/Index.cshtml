@model IEnumerable<Team>

@{
    ViewData["Title"] = "Избранные команды";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Избранные команды</h1>
        <div>
            <a asp-controller="Team" asp-action="Index" class="btn btn-primary">
                <i class="fas fa-arrow-left"></i> Назад к каталогу
            </a>
            @if (Model.Any())
            {
                <form asp-action="ClearFavorites" method="post" class="d-inline ms-2"
                      onsubmit="return confirm('Очистить все избранное?');">
                    <button type="submit" class="btn btn-outline-danger">
                        <i class="fas fa-trash"></i> Очистить все
                    </button>
                </form>
            }
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i>
            У вас <strong>@Model.Count()</strong> команд в избранном
        </div>

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var team in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <!-- Логотип команды -->
                        <div class="card-img-top-container" style="height: 180px; overflow: hidden; display: flex; align-items: center; justify-content: center; background-color: #f8f9fa;">
                            @if (!string.IsNullOrEmpty(team.Image))
                            {
                                <img src="@team.Image"
                                     class="card-img-top"
                                     alt="@team.Name"
                                     style="max-height: 100%; max-width: 100%; object-fit: contain; padding: 10px;">
                            }
                            else
                            {
                                <div class="text-muted d-flex align-items-center justify-content-center h-100">
                                    <i class="fas fa-users fa-3x"></i>
                                </div>
                            }
                        </div>

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@team.Name</h5>

                            @if (team.Category != null)
                            {
                                <span class="badge bg-primary mb-2" style="width: fit-content;">
                                    @team.Category.Name
                                </span>
                            }

                            <p class="card-text flex-grow-1">
                                @if (!string.IsNullOrEmpty(team.Description) && team.Description.Length > 80)
                                {
                                    @team.Description.Substring(0, 80)

                                    <text>...</text>
                                }
                                else
                                {
                                    @team.Description
                                }
                            </p>

                            <div class="mt-auto">
                                <div class="d-flex justify-content-between mb-3">
                                    <div>
                                        <small class="text-muted">Очки</small>
                                        <div class="fw-bold text-primary">@team.Points</div>
                                    </div>
                                    <div>
                                        <small class="text-muted">Позиция</small>
                                        <div class="fw-bold text-success">#@team.Position</div>
                                    </div>
                                </div>

                                <div class="d-grid gap-2">
                                    <a asp-controller="Team" asp-action="Details" asp-route-id="@team.Id"
                                       class="btn btn-primary">
                                        <i class="fas fa-info-circle"></i> Подробнее
                                    </a>

                                    <form asp-controller="Favorites" asp-action="RemoveFromFavorites" method="post"
                                          onsubmit="return confirm('Удалить команду из избранного?');">
                                        <input type="hidden" name="teamId" value="@team.Id" />
                                        <button type="submit" class="btn btn-outline-danger">
                                            <i class="fas fa-trash-alt"></i> Удалить
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <div class="card-footer text-muted">
                            <small>
                                <i class="fas fa-hashtag"></i> @team.Id
                                @if (team.FoundedYear.HasValue)
                                {
                                    <span class="ms-2">
                                        <i class="fas fa-calendar-alt"></i> @team.FoundedYear
                                    </span>
                                }
                            </small>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="fas fa-star fa-4x text-warning"></i>
            </div>
            <h3 class="text-muted">Избранные команды отсутствуют</h3>
            <p class="text-muted mb-4">Вы еще не добавили ни одной команды в избранное.</p>
            <a asp-controller="Team" asp-action="Index" class="btn btn-warning">
                <i class="fas fa-plus"></i> Добавить команды в избранное
            </a>
        </div>
    }
</div>