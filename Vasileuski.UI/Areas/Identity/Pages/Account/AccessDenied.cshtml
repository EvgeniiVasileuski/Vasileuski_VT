@page
@model AccessDeniedModel

@{
    ViewData["Title"] = "Доступ запрещен";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h2><i class="fas fa-ban"></i> @ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <i class="fas fa-lock fa-5x text-danger"></i>
                    </div>

                    <h4 class="mb-3">У вас нет прав для доступа к этой странице</h4>

                    <p class="text-muted mb-4">
                        Эта страница доступна только для администраторов системы.
                        Если вы считаете, что это ошибка, обратитесь к системному администратору.
                    </p>

                    <div class="d-flex justify-content-center gap-3">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a asp-controller="Team" asp-action="Index" class="btn btn-primary">
                                <i class="fas fa-home"></i> На главную
                            </a>
                            <form asp-area="Identity" asp-page="/Account/Logout" method="post">
                                <button type="submit" class="btn btn-outline-danger">
                                    <i class="fas fa-sign-out-alt"></i> Выйти
                                </button>
                            </form>
                        }
                        else
                        {
                            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary">
                                <i class="fas fa-sign-in-alt"></i> Войти
                            </a>
                            <a asp-controller="Team" asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-home"></i> На главную
                            </a>
                        }
                    </div>
                </div>
                <div class="card-footer text-muted">
                    <small>ID пользователя: @User.Identity.Name</small>
                </div>
            </div>
        </div>
    </div>
</div>
